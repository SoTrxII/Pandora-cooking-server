{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "moduleNameMapper": {
    "#core/(.*)": "<rootDir>/dist/$1"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!old-src/**/*.ts",
    "!dist/**/*.js",
    "!src/**/*.config.ts",
    "!src/**/*.d.ts",
    "!src/**/*.integration.ts"
  ],
  "modulePathIgnorePatterns": [
    "<rootDir>/dist",
    "<rootDir>/node_modules"
  ]
}
